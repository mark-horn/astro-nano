---
import type { CollectionEntry } from "astro:content";
import { dateRange } from "@lib/utils";

type Props = {
  entry: CollectionEntry<"work">;
}

const { entry } = Astro.props;
---

<div class="relative group flex flex-nowrap py-3 px-4 pr-10 rounded-lg border border-black/15 dark:border-white/20 hover:bg-black/5 dark:hover:bg-white/5 hover:text-black dark:hover:text-white transition-colors duration-300 ease-in-out"></div>
  <div class="flex flex-col flex-1 truncate">
    <div class="font-semibold text-black dark:text-white">
      {entry.data.title}
    </div>
    <div class="text-sm opacity-75">
      {entry.data.description}
    </div>
    <div class="text-sm opacity-75">
      {dateRange(entry.data.dateStart, entry.data.dateEnd)}
    </div>
  </div>
</div>
